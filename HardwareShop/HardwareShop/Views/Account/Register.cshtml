@model HardwareShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Inregistrare";
}
<link rel="stylesheet" href="~/Content/LoginRegister.css?v=1.2" type="text/css" />
<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>
    <div class="form">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="field">
                @Html.LabelFor(m => m.Nume, new { @class = "col-md-2 col-form-label" })
                <div class="input">
                    @Html.TextBoxFor(m => m.Nume, new { @class = "form-control" })
                </div>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.Prenume, new { @class = "col-md-2 col-form-label" })
                <div class="input">
                    @Html.TextBoxFor(m => m.Prenume, new { @class = "form-control" })
                </div>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                <div class="input">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                <div class="input">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
                <div class="input">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="field">
                <input type="submit" value="Inregistrare" class="adaugaProdus" />
            </div>
        }
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
